--- /dev/null	2000-10-22 01:01:00.000000000 +0200
+++ build.xml	2006-10-21 23:45:17.000000000 +0200
@@ -0,0 +1,47 @@
+<project name="struts-javadoc" default="javadoc" basedir=".">
+  <property name="lib.dir" value="lib"/>
+  <property name="struts.lib.dir" value="strutslib"/>
+  <path id="build.classpath">
+    <fileset dir="${lib.dir}">
+      <include name="**/*.jar"/>
+    </fileset>
+    <fileset dir="${struts.lib.dir}">
+      <include name="**/*.jar"/>
+    </fileset>
+  </path>
+  <target description="Create component Javadoc documentation" name="javadoc">
+    <javadoc
+        author="true"
+        bottom="Copyright (c) 2000-2006 Apache Software Foundation"
+        classpathref="build.classpath"
+        destdir="docs"
+        doctitle="&lt;h1&gt;Struts (Version 1.3.5)&lt;/h1&gt;" 
+        packagenames="org.apache.struts.*"
+        private="true" 
+        source="1.4"
+        version="true"
+        windowtitle="Struts (Version 1.3.5)">
+     <fileset dir="core/src/main/java">
+         <include name="**/*.java"/>
+     </fileset>
+     <fileset dir="taglib/src/main/java">
+         <include name="**/*.java"/>
+     </fileset>
+     <fileset dir="extras/src/main/java">
+         <include name="**/*.java"/>
+     </fileset>
+     <fileset dir="tiles/src/main/java">
+         <include name="**/*.java"/>
+     </fileset>
+     <fileset dir="scripting/src/main/java">
+         <include name="**/*.java"/>
+     </fileset>
+     <fileset dir="el/src/main/java">
+         <include name="**/*.java"/>
+     </fileset>
+     <fileset dir="faces/src/main/java">
+         <include name="**/*.java"/>
+     </fileset>
+     </javadoc>
+  </target>
+</project>
